{
	"extends": [
		"stylelint-config-recommended",
		"stylelint-config-standard",
		"stylelint-config-recommended-vue"
	],
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"extends",
					"tailwind"
				]
			}
		],
		"indentation": [
			"tab",
			{
				"baseIndentLevel": 1
			}
		],
		"selector-class-pattern": null
	}
}
